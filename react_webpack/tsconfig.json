{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization":false,//属性不用在构造器里面初始化
    "allowSyntheticDefaultImports": true,
    //"noImplicitAny": false, //降低对类型的校验
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "components": [
        "components"
      ],
      "utils": [
        "utils"
      ],
      "store": [
        "store"
      ],
      "api": [
        "api"
      ]
    }
  }
//  "include": [
//    "./src/**/*"
//  ]
}
